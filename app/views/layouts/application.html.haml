!!!

%html
  %head
    %title RunHub
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  
  %body
    %nav.main-bar
      %section.current-user
        - if user_signed_in?
          = current_user.email
      = image_tag "runhub-logo-small.png", :id => "small-logo"

    = alert
    = notice
    
    #main-content
      = yield
    
- if user_signed_in?
  .sign-out
    = link_to 'Sign out', destroy_user_session_path, :method => :delete
