= form_for @workout, :url => { :action => "create" }, :method => "post" do |f|
  .input
    When
    = f.date_select :when, :order => [:month, :day, :year],
                           :default => @workout_date
  .input
    Type
    = f.text_field :category
  .input
    Duration
    = fields_for @workout.duration do |duration_fields|
      = duration_fields.text_field :hours, :class => "duration-field", :size => 5
      \:
      = duration_fields.text_field :minutes, :class => "duration-field", :size => 5
      \:
      = duration_fields.text_field :seconds, :class => "duration-field", :size => 5
  .input
    Distance
    = f.text_field :distance
  .input
    Pace
    = fields_for @workout.pace do |pace_fields|
      = pace_fields.text_field :hours, :class => "pace-field", :size => 5, :name => "pace[hours]", :id => "pace_hours"
      \:
      = pace_fields.text_field :minutes, :class => "pace-field", :size => 5, :name => "pace[minutes]", :id => "pace_minutes"
      \:
      = pace_fields.text_field :seconds, :class => "pace-field", :size => 5, :name => "pace[seconds]", :id => "pace_seconds"
  .input
    Route
    = f.text_field :route
  .input
    Notes
    = f.text_area :notes

  = f.submit "Create Workout"
