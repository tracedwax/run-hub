#workout-week
  - @period.each do |day|
    .day{ :class => "period-flexbox", :id => day[:node] }
      %section.date
        .day-of-week
          = day[:week_day]
        .full-date
          %small
            = day[:formatted]
      %section.workout-set
        - if not day[:workouts].size.zero?
          - day[:workouts].each do |workout|
            %article.workout
              .workout-heading
                [Something here]
              .workout-flexbox
                %section.left-workout-info
                  .container
                    = workout.category
                  .container
                    = workout.duration
                  .container
                    = workout.pace
                    min/mile
                %section.right-workout-info
                  .container
                    = workout.distance
                    miles
                  .container
                    = workout.route
                %section.workout-notes
                  = workout.notes
