  #sign-in-container
    .dialog-header
      Sign in
    %section.sign-in-section
      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        %div= f.email_field :email, :class => "big-input", :placeholder => "email address"
        %div= f.password_field :password, :class => "big-input", :placeholder => "password"
        %span= f.submit "Sign in", :class => "homepage-button"
        - if devise_mapping.rememberable?
          %span.remember-me
            = f.check_box :remember_me
            = f.label :remember_me
        %fb:login-button{"on-login" => "login(arguments)", :perms => "offline_access,email,user_about_me,user_birthday"} Login with Facebook


    = link_to "Create an Account", new_user_registration_path, :method => "get", :class => "homepage-button", :id => "sign-up-button"

