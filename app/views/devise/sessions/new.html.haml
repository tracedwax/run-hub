#fb-root
%script{:src => "http://connect.facebook.net/en_US/all.js"}
:javascript
  window.fbAsyncInit = function() {
    FB._https = window.location.protocol == "https:";
    FB.init({appId: "319094718102433", cookie:true, status:true, xfbml:true});
    FB.Canvas.setAutoResize(false);
    FB.Canvas.setSize({ "width": 760, "height": 700 });
  };

  (function() {
    var e = document.createElement('script');
    e.src = document.location.protocol + '//connect.facebook.net/en_US/all.js';
    e.async = true;
    document.getElementById('fb-root').appendChild(e);
  }());

  function login(args)
  {
    var uid = args[2][0]['session']['uid']
    var access_token = args[2][0]['session']['access_token']
    window.location = '/?uid=' + uid + '&fbtoken=' + access_token;
  }

